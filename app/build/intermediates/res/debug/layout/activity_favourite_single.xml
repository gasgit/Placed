<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:screenOrientation="portrait"
                    style="@android:style/TextAppearance.Medium"

        >

        <!--id label -->

        <TextView
            android:id="@+id/lblIdFav"
            android:layout_height="30dp"
            android:layout_width="55dp"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:textColor="#acacac"

            android:textStyle="bold"
            android:text="ID: "

            />

        <!--id textView-->

        <TextView
            android:id="@+id/lrgTxIdFav"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:textColor="#43bd00"
            android:layout_toRightOf="@id/lblIdFav"
            />

        <!--title label-->

        <TextView
            android:id="@+id/lblTitleFav"
            android:layout_height="30dp"
            android:layout_width="55dp"
            android:text="Title: "
            android:textColor="#acacac"

            android:textStyle="bold"

            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblIdFav"

            />

        <!--place textView-->


        <TextView
            android:id="@+id/lrgTxTitleFav"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_below="@id/lrgTxIdFav"
            android:layout_toRightOf="@id/lblTitleFav"
            />

        <!--place label-->

        <TextView
            android:id="@+id/lblPlaceFav"
            android:layout_height="30dp"
            android:layout_width="55dp"
            android:textColor="#acacac"

            android:textStyle="bold"

            android:text="Place: "
            android:layout_margin="2dp"
            android:layout_below="@+id/lblTitleFav"
            android:layout_alignParentLeft="true"
            />

        <!--place textView-->


        <TextView
            android:id="@+id/lrgTxPlacesFav"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_below="@id/lblTitleFav"
            android:layout_toRightOf="@id/lblPlaceFav"
            />

        <!--image view-->



        <ImageView
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:id="@+id/lrgImageViewFav"
            android:layout_margin="2dp"
            android:layout_below="@id/lrgTxPlacesFav"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"/>

        <!--comment label-->


        <TextView
            android:id="@+id/lblCommentsFav"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#acacac"

            android:textStyle="bold"

            android:text="Comment: "
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lrgImageViewFav"


            />

        <!--comment textView-->


        <TextView
            android:id="@+id/lrgTxCommentsFav"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/lrgImageViewFav"
            android:layout_toRightOf="@id/lblCommentsFav"
            android:scrollbars="vertical"
            android:isScrollContainer="true"
            />
        <!--lat label-->

        <TextView
            android:id="@+id/lblLatFav"
            android:layout_height="30dp"
            android:layout_width="75dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:textColor="#acacac"

            android:textStyle="bold"

            android:text="Lat: "
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lrgTxCommentsFav"

            />
        <!--lat textView-->

        <TextView
            android:id="@+id/lrgTxLatFav"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"

            android:layout_below="@id/lrgTxCommentsFav"
            android:layout_toRightOf="@id/lblLatFav"
            />

        <!--long label -->





        <TextView
            android:id="@+id/lblLngFav"
            android:layout_height="30dp"
            android:layout_width="75dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:textColor="#acacac"

            android:textStyle="bold"


            android:text="Long: "
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblLatFav"

            />

        <!--long textView-->


        <TextView
            android:id="@+id/lrgTxLngFav"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"

            android:layout_toRightOf="@id/lblLngFav"
            android:layout_below="@id/lrgTxLatFav"
            />

        <!--label posted-->


        <TextView
            android:id="@+id/lblPostedFav"
            android:layout_height="30dp"
            android:layout_width="75dp"
            android:text="Posted: "
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:textColor="#acacac"

            android:textStyle="bold"


            android:layout_below="@id/lblLngFav"

            />

        <!--posted textView-->


        <TextView
            android:id="@+id/lrgTxtPostedFav"
            android:layout_width="2000dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"

            android:layout_toRightOf="@id/lblPostedFav"
            android:layout_below="@id/lrgTxLngFav"
            />

        <!--map button-->

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Map"
            android:id="@+id/buttonMapFav"
            android:layout_below="@id/lblPostedFav"
            />

        <!--add favourites-->


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete from Favourites"
            android:id="@+id/btnDelete"
            android:layout_below="@+id/buttonMapFav"/>


    </RelativeLayout>
</ScrollView><!-- From: file:/home/glen/Desktop/Placed/app/src/main/res/layout/activity_favourite_single.xml -->